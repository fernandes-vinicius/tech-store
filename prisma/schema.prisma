generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id       String    @id @default(cuid())
  name     String
  slug     String
  imageUrl String
  products Product[]

  @@map("categories")
}

model Product {
  id              String   @id @default(cuid())
  name            String
  slug            String
  description     String
  price           Decimal  @db.Decimal(8, 2)
  imageUrl        String
  discountPercent Int      @default(0)
  category        Category @relation(fields: [categoryId], references: [id])
  categoryId      String

  @@map("products")
}

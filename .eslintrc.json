{
  "extends": ["next/core-web-vitals", "@rocketseat/eslint-config/next"],
  "plugins": ["import-helpers"],
  "rules": {
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          "/^next/",
          "/^react/",
          "module",
          "/^@//",
          ["parent", "sibling", "index"]
        ],
        "alphabetize": {
          "order": "asc",
          "ignoreCase": true
        }
      }
    ]
  }
}
